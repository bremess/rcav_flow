    <fieldset>
            <legend>Your Details:</legend>
            <label for="firstname">First Name:
                <input type="text" name="firstname" size="30" maxlength="50">
            </label>
            <br />
            <label for="lastname">Last Name:
                <input type="text" name="lastname" size="30" maxlength="50">
            </label>
            <br />
            <label for="email"> Email: <i class="fa fa-envelope-o"></i>
                <input type="email" name="email" size="30" maxlength="100">
            </label>
            <br />
    </fieldset>
            <br />
    <fieldset>
            <legend>Your Review:</legend>
            <p>
            <label for="hear-about"> What is your favorite color?    </label>
            <select name="color" id="hear-about">
                <option value="#00ff00">Green</option>
                <option value="rgb(0, 255, 255)">Blue</option>
                <option value="lightpink">Pink</option>
                <option value="lightyellow">Yellow</option>
            </select>
            </p><p>
            Would you visit again?
            <br />
            <label>
                <input type="radio" name="rating" value="yes" />
            Yes
            </label>
            <label>
                <input type="radio" name="rating" value="no" />
            No
            </label>
            <label>
                <input type="radio" name="rating" value="maybe" />
            Maybe
            </label>
            </p>
            <p>
            <label for="comment"> Comments: 
            <br />
            <textarea  rows="4" cols="40" id="comment" name="comment">
            </textarea>
            </label>
            </p>
            <label>
                   <input type="checkbox" name="subscribe" checked="checked" />
                    Sign me up for email updates
            </label>
            <br />
                <input type="submit" value="Submit review" />
    </fieldset>
    
    
</form>